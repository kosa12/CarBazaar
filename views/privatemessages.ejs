<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Private Messages</title>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body class="bg-background font-Courier">
    <%- include('partials/headerBasic.ejs') %>
    <div class="container mx-auto px-4 mt-24 flex">
      <div class="w-1/4 bg-white shadow-lg overflow-y-auto p-4">
        <h2 class="text-xl font-semibold mb-4">Users</h2>
        <div class="sidebar space-y-2" id="userList">
          <% users.forEach(user => { %>
          <button
            class="user-button w-full text-left p-2 rounded-lg bg-gray-100 hover:bg-gray-200 transition-colors duration-200"
            data-user-id="<%= user.user_id %>"
          >
            <%= user.username %>
          </button>
          <% }) %>
        </div>
      </div>

      <div class="main-content flex-1 flex flex-col">
        <div id="conversation" class="flex-1 p-4 overflow-y-auto bg-white shadow-lg">
          <h2>Select a user to view the conversation</h2>
        </div>
        <div class="message-box p-4 bg-white shadow-lg border-t">
          <input
            type="text"
            id="messageInput"
            class="message-input flex-1 p-2 border rounded-lg focus:outline-none focus:border-blue-500"
            placeholder="Type your message here"
          />
          <button
            id="sendMessageButton"
            class="p-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors duration-200"
          >
            Send
          </button>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
    <script src="/js/privatemessages.js"></script>
  </body>
</html>
